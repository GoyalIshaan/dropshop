{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler", // or "nodenext" or "bundler" as suggested
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "incremental": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "node_modules/rollup/dist/parseAst.d.ts" // include this to resolve the missing module
  ],
  "exclude": ["node_modules"]
}
